class manager:
	"""manager class"""
	def __init__(self, name, location, label, evil, phrase):
		"""constructor for manager class"""
		self.name = name
		self.location = location
		self.label = label
		self.evil = evil
		self.phrase = phrase

	def listinfo(manager):
		"""lists all the info of a given manager"""
		print (f"NAME: {self.name}")
		print (f"CITY: {self.location}")
		print (f"LABEL: {self.label}")
		print (f"EVIL LEVEL: {self.evil}")
		print (f"PHRASE: {self.phrase}")
		print("")
		print("")
			












